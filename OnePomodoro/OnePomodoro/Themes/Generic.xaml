    <Style TargetType="controls:TimeAndButtonSwitcher">
        <Setter Property="Foreground"
                Value="White" />
        <Setter Property="Background"
                Value="Transparent" />
        <Setter Property="FontSize"
                Value="68" />
        <Setter Property="FontFamily"
                Value="/Font/DINPro-Regular.otf#DINPro" />
        <Setter Property="StateButtonLength"
                Value="96" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="controls:TimeAndButtonSwitcher">
                    <Border Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            DataContext="{Binding RelativeSource={RelativeSource Mode=TemplatedParent},Path=PomodoroViewModel}">
                        <VisualStateManager.VisualStateGroups>
                            <VisualStateGroup x:Name="CommonStates">
                                <VisualState x:Name="Normal">
                                    
                                </VisualState>
                                <VisualState x:Name="PointerOver">
                                    <VisualState.Setters>
                                        <Setter Target="CountdownElement.Visibility"
                                                Value="Collapsed" />
                                        <Setter Target="StateButton.Visibility"
                                                Value="Visible" />
                                    </VisualState.Setters>
                                </VisualState>

                                <VisualState x:Name="Pressed">
                                    <VisualState.Setters>
                                        <Setter Target="CountdownElement.Visibility"
                                                Value="Collapsed" />
                                        <Setter Target="StateButton.Visibility"
                                                Value="Visible" />
                                    </VisualState.Setters>
                                </VisualState>

                                <VisualState x:Name="Disabled">

                                </VisualState>
                            </VisualStateGroup>
                        </VisualStateManager.VisualStateGroups>
                        <Grid>
                            <Grid x:Name="CountdownElement"
                                  VerticalAlignment="Center">
                                <animations:Implicit.HideAnimations>
                                    <animations:TranslationAnimation SetInitialValueBeforeDelay="True"
                                                                     From="0,0,0"
                                                                     To="0,-80,0"
                                                                     Duration="0:0:0.6" />
                                    <animations:OpacityAnimation SetInitialValueBeforeDelay="True"
                                                                 From="1"
                                                                 To="0"
                                                                 Duration="0:0:0.6" />
                                </animations:Implicit.HideAnimations>
                                <animations:Implicit.ShowAnimations>
                                    <animations:TranslationAnimation SetInitialValueBeforeDelay="True"
                                                                     From="0,-80,0"
                                                                     To="0,0,0"
                                                                     Duration="0:0:0.6" />
                                    <animations:OpacityAnimation SetInitialValueBeforeDelay="True"
                                                                 From="0"
                                                                 To="1"
                                                                 Duration="0:0:0.6" />
                                </animations:Implicit.ShowAnimations>

                                <TextBlock Text="{Binding RemainingPomodoroTime,Converter={StaticResource FormatStringConverter},ConverterParameter=mm\\:ss}"
                                           Visibility="{Binding IsInPomodoro,Converter={StaticResource BoolToVisibilityConverter}}"
                                           HorizontalAlignment="Center"
                                           x:Name="FocusCountdown" />
                                <TextBlock Text="{Binding RemainingBreakTime,Converter={StaticResource FormatStringConverter},ConverterParameter=mm\\:ss}"
                                           HorizontalAlignment="Center"
                                           Visibility="{Binding IsInPomodoro,Converter={StaticResource NegationBoolToVisibilityConverter}}"
                                           x:Name="RelaxCountdown" />
                            </Grid>
                            <controls:PomodoroStateButton HorizontalAlignment="Center"
                                                          Style="{StaticResource LargeButton}"
                                                          Height="{TemplateBinding StateButtonLength}"
                                                          Width="{TemplateBinding StateButtonLength}"
                                                          BreakColor="{TemplateBinding BreakColor}"
                                                          PomodoroColor="{TemplateBinding PomodoroColor}"
                                                          OutlineColor="{TemplateBinding OutlineColor}"
                                                          StartCommand="{Binding StartTimerCommand}"
                                                          StopCommand="{Binding StopTimerCommand}"
                                                          IsInPomodoro="{Binding IsInPomodoro}"
                                                          Visibility="Collapsed"
                                                          IsTimerInProgress="{Binding IsTimerInProgress}"
                                                          VerticalAlignment="Center"
                                                          x:Name="StateButton"
                                                         >
                                <animations:Implicit.HideAnimations>
                                    <animations:TranslationAnimation SetInitialValueBeforeDelay="True"
                                                                     From="0,0,0"
                                                                     To="0,80,0"
                                                                     Duration="0:0:0.6" />
                                    <animations:OpacityAnimation SetInitialValueBeforeDelay="True"
                                                                 From="1"
                                                                 To="0"
                                                                 Duration="0:0:0.6" />
                                </animations:Implicit.HideAnimations>
                                <animations:Implicit.ShowAnimations>
                                    <animations:TranslationAnimation SetInitialValueBeforeDelay="True"
                                                                     From="0,80,0"
                                                                     To="0,0,0"
                                                                     Duration="0:0:0.6" />
                                    <animations:OpacityAnimation SetInitialValueBeforeDelay="True"
                                                                 From="0"
                                                                 To="1"
                                                                 Duration="0:0:0.6" />
                                </animations:Implicit.ShowAnimations>
                            </controls:PomodoroStateButton>
                        </Grid>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

