                        <Grid>

                            <Viewbox Stretch="Uniform">
                                <Grid Height="24" Width="24" RenderTransformOrigin=".5,.5">
                                    <Grid.RenderTransform>
                                        <CompositeTransform x:Name="ShapeCompositeTransform"/>
                                    </Grid.RenderTransform>
                                    <controls:ButtonDecorator  x:Name="Inset"
                                                        controls:DropShadowPanel.ShadowOpacity="{TemplateBinding controls:DropShadowPanel.ShadowOpacity}"
                                                        controls:DropShadowPanel.BlurRadius="{TemplateBinding controls:DropShadowPanel.BlurRadius}"
                                                        controls:DropShadowPanel.Color="{TemplateBinding controls:DropShadowPanel.Color}"
                                                        controls:DropShadowPanel.OffsetX="{TemplateBinding controls:DropShadowPanel.OffsetX}"
                                                        controls:DropShadowPanel.OffsetY="{TemplateBinding controls:DropShadowPanel.OffsetY}"
