<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:controls="using:OnePomodoro.Controls">

    <Style x:Key="EllipseButtonRevealStyle"
           BasedOn="{StaticResource ButtonRevealStyle}"
           TargetType="Button">
        <Setter Property="CornerRadius" Value="100" />
        <Setter Property="Background" Value="Transparent" />
    </Style>

    <Style x:Key="TitleBarButton"
           BasedOn="{StaticResource NavigationBackButtonSmallStyle}"
           TargetType="Button">
        <Setter Property="FontSize" Value="12" />
        <Setter Property="Width" Value="48" />
    </Style>

    <Style x:Key="SmallButton" TargetType="controls:PomodoroStateButton">
        <Setter Property="Height" Value="24" />
        <Setter Property="Width" Value="24" />
    </Style>

    <Style x:Key="LargeButton" TargetType="controls:PomodoroStateButton">
        <Setter Property="Height" Value="96" />
        <Setter Property="Width" Value="96" />
    </Style>

    <Style x:Key="HugeButton" TargetType="controls:PomodoroStateButton">
        <Setter Property="Height" Value="192" />
        <Setter Property="Width" Value="192" />
    </Style>
</ResourceDictionary>
